# Testing Environment Configuration

# Environment
ENVIRONMENT=testing

# Application settings
APP_NAME=Ticket System API (Testing)
DEBUG=false
VERSION=0.1.0

# Database settings (External database for testing)
DATABASE_URL=postgresql+asyncpg://test_user:test_password@test-db-host:5432/ticket_system_test

# Security settings
SECRET_KEY=test-secret-key-for-testing-only
